{
    "schematic": {
        "name": "Schematic",
        "version": "1.0"
    },
    "connection": {
        "host": "127.0.0.1",
        "user": "root",
        "pass": "root"
    },
    "database": {
        "general": {
            "name": "schematic",
            "charset": "utf8",
            "collation": "utf8_general_ci",
            "engine": "InnoDB"
        },
        "tables": {
            "products": {
                "fields": {
                    "id": {
                        "type": "int(11)",
                        "null": false,
                        "unsigned": true,
                        "index": "PRIMARY KEY",
                        "autoIncrement": true,
                        "comment": "Id field for listing ids"
                    },
                    "name": {
                        "type": "varchar(256)",
                        "null": false
                    },
                    "description": {
                        "type": "varchar(512)",
                        "null": false
                    },
                    "price": {
                        "type": "float",
                        "null": false
                    },
                    "priceWas": {
                        "type": "float",
                        "null": false
                    },
                    "image": {
                        "type": "blob",
                        "null": false
                    },
                    "date": {
                        "type": "datetime",
                        "null": false
                    }
                }
            }
        }
    }
}