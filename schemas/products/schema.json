{
    "schematic": {
        "name": "Schematic products",
        "version": "1.0"
    },
    "connection": {
        "host": "localhost",
        "user": "root",
        "pass": ""
    },
    "database": {
        "general": {
            "name": "schematic",
            "charset": "utf8",
            "collation": "utf8_general_ci",
            "engine": "InnoDB"
        },
        "tables": {
            "products": {
                "fields": {
                    "id": {
                        "type": "int",
                        "length": "11",
                        "decimals": false,
                        "null": false,
                        "unsigned": true,
                        "index": "PRIMARY KEY",
                        "autoIncrement": true,
                        "comment": "Id field for listing ids"
                    },
                    "name": {
                        "type": "varchar",
                        "length": "256",
                        "null": false,
                        "comment": "The name of the product"
                    },
                    "description": {
                        "type": "varchar",
                        "length": "1024",
                        "decimals": false,
                        "null": false
                    },
                    "image": {
                        "type": "varchar",
                        "length": "1024",
                        "decimals": false,
                        "null": false
                    }
                }
            }
        }
    }
}